<div class="form-group">
    <label for="title">
        <h1 class="display-6">Title</h1>
    </label>
    <input required type="text" name="title" id="title" class="form-control" value="<%= article.title %> ">
</div>
<div class="form-group">
    <label for="description">
        <h1 class="display-6">Description</h1>
    </label>
    <textarea required name="description" id="description" cols="30" rows="2"
        class="form-control"><%= article.description %></textarea>
</div>
<div class="form-group">
    <label for="markdown">
        <h1 class="display-6">Markdown</h1>
    </label>
    <textarea required name="markdown" id="markdown" cols="30" rows="10"
        class="form-control"><%= article.markdown %></textarea>
</div>


<a class="btn btn-danger" href="/" role="button">Cancel</a>

<button type="submit" class="btn btn-success">Save</button>